{
  "name": "@comspace/backend",
  "version": "1.0.0",
  "description": "ComSpace E-Commerce Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:no-docker": "cross-env NO_DOCKER=true nodemon --exec ts-node src/server.ts",
    "seed:sample": "node scripts/seed-sample.js",
    "seed:demo": "node scripts/seed-demo.js",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:ci": "ts-node --files src/server.ts",
    "smoke": "node scripts/smoke-test.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test:e2e": "start-server-and-test 'npm run dev' http://localhost:5000 'jest --testPathPattern=__tests__/e2e'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "redis": "^4.6.11",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-apple": "^2.0.2",
    "stripe": "^14.10.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "node-cron": "^3.0.3",
    "firebase-admin": "^12.0.0",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "date-fns": "^3.0.6",
    "uuid": "^9.0.1",
    "@sentry/node": "^8.0.0",
    "i18next": "^23.7.16",
    "i18next-http-middleware": "^3.5.0",
    "i18next-fs-backend": "^2.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3",
    "cross-env": "^7.0.3",
    "mongodb-memory-server": "^8.12.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.13",
    "@types/jest": "^29.5.4"
  }
}
