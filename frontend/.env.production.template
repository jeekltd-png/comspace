# ============================================================================
# ComSpace Frontend — Production Environment Variables
# ============================================================================
# Copy this file to .env.production.local and fill in values before deploying.
# ============================================================================

# ── API ──────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api   # [REQUIRED] Backend API URL
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com          # [OPTIONAL] WebSocket URL

# ── Stripe ───────────────────────────────────────────────────────────────────
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...        # [REQUIRED] Stripe publishable key

# ── OAuth ────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_GOOGLE_CLIENT_ID=                         # [OPTIONAL] Google OAuth client ID

# ── Monitoring ───────────────────────────────────────────────────────────────
NEXT_PUBLIC_SENTRY_DSN=                               # [OPTIONAL] Sentry DSN for frontend

# ── Feature Flags ────────────────────────────────────────────────────────────
NEXT_PUBLIC_ENABLE_CHAT=true                          # [OPTIONAL] Enable AI chatbot
NEXT_PUBLIC_ENABLE_PWA=true                           # [OPTIONAL] Enable PWA features
