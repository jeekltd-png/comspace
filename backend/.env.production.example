# Copy this to .env.production and fill values for your production deployment
NODE_ENV=production
PORT=5000

# MongoDB connection string
MONGODB_URI=mongodb://user:password@mongo:27017/comspace

# Redis (optional, used for tokens/cache)
REDIS_URL=redis://redis:6379

# JWT secrets (use long randomly generated secrets)
JWT_SECRET=replace_with_strong_secret
JWT_REFRESH_SECRET=replace_with_strong_refresh_secret

# Frontend public URL
FRONTEND_URL=https://example.com

# Email / SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=example
SMTP_PASS=change_me

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Currency API (optional)
CURRENCY_API_URL=https://api.example.com
CURRENCY_API_KEY=your_key_here

# Sentry (optional)
SENTRY_DSN=

# CORS
CORS_ORIGIN=https://example.com

# CI / build info (setable by CI)
GIT_COMMIT=
