{
  "name": "comspace",
  "version": "1.0.0",
  "description": "White-label e-commerce platform with multicurrency support",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "mobile",
    "shared"
  ],
  "scripts": {
    "dev": "run-p dev:backend dev:frontend",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install",
    "e2e": "cypress open",
    "e2e:run": "cypress run --config baseUrl=http://localhost:3000",
    "ci:e2e": "start-server-and-test 'npm:dev' http://localhost:3000 e2e:run"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "cypress": "^12.16.0",
    "start-server-and-test": "^1.14.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
